@{
    Layout = null;
}

@model IEnumerable<Zippo_Manage.Models.Donhang>

@{
    ViewData["Title"] = "Danh Sách Đon Hàng";
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<h1>Danh Sách Đơn Hàng</h1>
<a asp-action="themDH" asp-controller="DonHang" class="btn btn-primary">Thêm Đơn hàng</a>
<a asp-action="dashBoardManage" asp-controller="Home" class="btn btn-primary">Quay lại</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã Đơn Hàng</th>
            <th>Mã Khách Hàng</th>
            <th>Ngày Đặt Hàng</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donhang in Model)
        {
            <tr>
                <td>@donhang.MaDh</td>
                <td>@donhang.MaKhNavigation.Ten</td> <!-- Hiển thị tên khách hàng -->
                <td>@donhang.NgayDatHang.ToString("dd/MM/yyyy")</td>
                <td>
                    <a class="btn btn-primary" asp-action="formSuaDH" asp-controller="DonHang">Sửa</a>
                    <a class="btn btn-primary" asp-action="formXoaDH" asp-controller="DonHang">Xóa</a>
                    <a href="@Url.Action("Details", "Donhang", new { id = donhang.MaDh })" class="btn btn-info">Xem Chi Tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>