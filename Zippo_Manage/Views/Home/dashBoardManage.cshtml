@{
    Layout = null;
}
@model Zippo_Manage.Models.dashBoardModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zippo Store Dashboard</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
   @*  <link href="~/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet"> *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .sidebar {
            height: 100vh;
            background-color: #343a40;
            color: #fff;
            padding: 20px;
        }

            .sidebar a {
                color: #fff;
                text-decoration: none;
                display: block;
                margin: 10px 0;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    padding-left: 10px;
                }

        .dashboard-content {
            padding: 20px;
        }

        .card-icon {
            font-size: 2.5rem;
            color: #fff;
        }

        .function-title {
            margin-top: 20px;
            margin-bottom: 10px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar">
                <h2 class="text-center"><a href="/"><img class="img-responsive" src="https://zippo.vn/wp-content/themes/zippo/assets/images/zippo-logo-black.svg" alt="Logo" /></a></h2>
                <hr>
                <a href="#dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                <a href="/"><i class="fas fa-store"></i> Trang Mua Sắm</a>
                <a asp-action="Index" asp-controller="TaiKhoan"><i class="fas fa-user"></i> Quản Lý Tài Khoản</a>
                <a asp-action="dsSanPham" asp-controller="SanPham"><i class="fas fa-box"></i> Quản Lý Sản Phẩm</a>
                <a asp-action ="dsGioHangAdmin" asp-controller="GioHang"><i class="fas fa-shopping-basket"></i> Quản Lý Giỏ Hàng</a>
                <a asp-action ="dsGioHangAdmin" asp-controller="GioHang"><i class="fas fa-shopping-cart"></i> Quản lý Đơn hàng</a>
                <a asp-action="Index" asp-controller="KhachHang"> <i class="fas fa-user-circle"></i> Quản lý khách hàng</a>

            </nav>

            <main class="col-md-10 ms-sm-auto dashboard-content">
                <h3 class="function-title">Dashboard</h3>
                <div class="row">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white mb-4">
                            <div class="card-body">
                                <h5>Tổng sản phẩm</h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="card-icon"><i class="fas fa-box"></i></span>
                                    <span class="fs-3">@Model.SoSP</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card bg-success text-white mb-4">
                            <div class="card-body">
                                <h5>Đơn hàng</h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="card-icon"><i class="fas fa-shopping-cart"></i></span>
                                    <span class="fs-3">@Model.SoDH</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card bg-warning text-white mb-4">
                            <div class="card-body">
                                <h5>Khách hàng</h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="card-icon"><i class="fas fa-users"></i></span>
                                    <span class="fs-3">@Model.SoKhachHang</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card bg-danger text-white mb-4">
                            <div class="card-body">
                                <h5>Doanh thu (VND)</h5>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="card-icon"><i class="fas fa-money-bill-wave"></i></span>
                                    <span class="fs-3">5M</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
