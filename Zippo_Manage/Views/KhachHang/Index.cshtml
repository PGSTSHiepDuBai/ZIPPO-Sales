@{
    Layout = null;
}

@model IEnumerable<Zippo_Manage.Models.Khachhang>

@{
    ViewData["Title"] = "Danh Sách Khách Hàng";
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<h1>Danh Sách Khách hàng</h1>
<a asp-action="themKH" asp-controller="KhachHang" class="btn btn-primary">Thêm Khách Hàng</a>
<a asp-action="dashBoardManage" asp-controller="Home" class="btn btn-primary">Quay lại</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã Khách Hàng</th>
            <th>Họ Lót</th>
            <th>Tên</th>
            <th>Email</th>
            <th>SDT</th>
            <th>Tác vụ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.MaKh</td>
                <td>@customer.HoLot</td>
                <td>@customer.Ten</td>
                <td>@customer.Email</td>
                <td>@customer.Sdt</td>
                <td>
                    <a class="btn btn-primary" asp-action="formSuaSP" asp-controller="KhacHang">Sửa</a>
                    <a class="btn btn-primary" asp-action="formXoaSP" asp-controller="KhacHang">Xóa</a>
                    <a href="@Url.Action("Details", "Khachhang", new { id = customer.MaKh })" class="btn btn-info">Xem Thông tin</a>
                </td>
            </tr>
        }
    </tbody>
</table>
