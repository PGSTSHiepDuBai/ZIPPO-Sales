@{
    Layout = null;
}

@model IEnumerable<Zippo_Manage.Models.Giohang>

@{
    ViewData["Title"] = "Danh Sách Giỏ Hàng";
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<h1>Danh Sách Giỏ Hàng</h1>
<a asp-action="themKH" asp-controller="KhachHang" class="btn btn-primary">Thêm Khách Hàng</a>
<a asp-action="dashBoardManage" asp-controller="Home" class="btn btn-primary">Quay lại</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã Giỏ Hàng</th>
            <th>Mã Khách Hàng</th>
            <th>Ngày Tạo</th>
            <th>Trạng Thái</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var giohang in Model)
        {
            <tr>
                <td>@giohang.MaGh</td>
                <td>@giohang.MaKhNavigation.Ten</td> 
                <td>@giohang.NgayTao.ToString("dd/MM/yyyy")</td>
                <td>@giohang.TrangThai</td>
                <td>
                    <a class="btn btn-primary" asp-action="formSuaGH" asp-controller="GioHang">Sửa</a>
                    <a class="btn btn-primary" asp-action="formXoaGH" asp-controller="GioHang">Xóa</a>
                    <a href="@Url.Action("Details", "Giohang", new { id = giohang.MaGh })" class="btn btn-info">Xem Chi Tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>